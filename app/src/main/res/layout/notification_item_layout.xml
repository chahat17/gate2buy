<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginBottom="8dp"
    android:elevation="7dp"
    android:background="@color/colorWhite">

    <TextView
        android:id="@+id/NotificationName_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Notification Name"
        android:textSize="14dp"
        android:layout_marginRight="8dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/colorBlack"
        app:layout_constraintStart_toEndOf="@id/image1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/NotificationDay_tv"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        />
    <TextView
        android:id="@+id/NotificationDay_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Day"
        android:textSize="14dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/NotificationInfo_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Notification Info"
        android:textSize="14dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintStart_toEndOf="@id/image1"
        app:layout_constraintTop_toBottomOf="@id/NotificationName_tv"
        app:layout_constraintEnd_toStartOf="@id/NotificationDay_tv"
        android:layout_marginTop="6dp"
        android:maxLines="2"
        android:ellipsize="end"
        />

    <ImageView
        android:id="@+id/image1"
        android:layout_width="60dp"
        android:layout_marginLeft="16dp"
        android:layout_height="match_parent"
        android:src="@drawable/product1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>